<%= simple_form_for [cocktail, dose] do |f| %>
  <%= f.association :ingredient %>
  <%= f.input :description %>
  <%= f.submit "Complete Cocktail", class: "btn btn-primary" %>
<% end %>

<%= link_to 'Back to all cocktails', cocktails_path %>
<%= link_to 'Delete dose', dose_path(dose), method: :delete %>
