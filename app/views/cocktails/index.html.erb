<div class="container">
    <h1>Mixter Cocktail</h1>
      <p>This challenge is tough!!</p>
          <%= link_to "Add a cocktail", new_cocktail_path, class: "btn btn-primary btn-lg" %>

    <div class="row">
        <% @cocktails.each do |cocktail| %>
      <div class="col-4">
          <h2><%= link_to "#{cocktail.name}", cocktail_path(cocktail) %></h2>
            <%= cl_image_tag cocktail.photo.key, height: 251, width: 300, crop: :fill %>
            <%= link_to "", cocktail_path(cocktail), class: 'card-link' %>
      </div>
        <% end %>
    </div>
</div>





